      "name": "RSI14",
      "type": "RSI",
      "parameters": {
        "period": 14
      }
    },
    {
      "name": "SMA20",
      "type": "SMA",
      "parameters": {
        "period": 20,
        "priceType": "close"
      }
    }
  ],
  "entryConditions": [
    {
      "type": "threshold",
      "side": "LONG",
      "parameters": {
        "indicator": "RSI14",
