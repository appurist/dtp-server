        "comparison": "<"
      },
      "description": "RSI below 30 (oversold) for LONG entry"
    },
    {
      "type": "threshold",
      "side": "SHORT",
      "parameters": {
        "indicator": "RSI14",
        "threshold": 70,
        "comparison": ">"
      },
      "description": "RSI above 70 (overbought) for SHORT entry"
    }
  ],
  "exitConditions": [
    {
      "type": "threshold",
      "side": "BOTH",
      "parameters": {
        "indicator": "RSI14",
        "threshold": 50,
        "comparison": ">"
      },
      "description": "RSI above 50 - exit LONG position"
    },
    {
      "type": "threshold",
      "side": "BOTH",
      "parameters": {
        "indicator": "RSI14",
        "threshold": 50,
        "comparison": "<"
      },
      "description": "RSI below 50 - exit SHORT position"
    },
    {
      "type": "position-pnl",
      "side": "BOTH",
      "parameters": {
        "threshold": -75,
        "comparison": "<"
      },
      "description": "Stop loss at -$75"
    },
    {
      "type": "position-pnl",
      "side": "BOTH",
      "parameters": {
        "threshold": 150,
        "comparison": ">"
